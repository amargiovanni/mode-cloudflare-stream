{{!
    @template local_cloudflarestream/system_status

    System status section template.

    Context variables required for this template:
    * configured - Whether plugin is configured
    * valid - Whether configuration is valid
    * api_connected - Whether API connection is working
    * api_message - API connection message
    * errors - Array of error messages
    * warnings - Array of warning messages
}}

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fa fa-cogs"></i> System Status
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="status-item">
                    <strong>Configuration:</strong>
                    {{#configured}}
                        <span class="badge badge-success">Configured</span>
                    {{/configured}}
                    {{^configured}}
                        <span class="badge badge-danger">Not Configured</span>
                    {{/configured}}
                </div>
            </div>
            <div class="col-md-4">
                <div class="status-item">
                    <strong>Validation:</strong>
                    {{#valid}}
                        <span class="badge badge-success">Valid</span>
                    {{/valid}}
                    {{^valid}}
                        <span class="badge badge-warning">Issues Found</span>
                    {{/valid}}
                </div>
            </div>
            <div class="col-md-4">
                <div class="status-item">
                    <strong>API Connection:</strong>
                    {{#api_connected}}
                        <span class="badge badge-success">Connected</span>
                    {{/api_connected}}
                    {{^api_connected}}
                        <span class="badge badge-danger">Failed</span>
                    {{/api_connected}}
                </div>
            </div>
        </div>
        
        {{#api_message}}
        <div class="mt-3">
            <small class="text-muted">{{api_message}}</small>
        </div>
        {{/api_message}}
        
        {{#errors}}
        <div class="alert alert-danger mt-3">
            <strong>Configuration Errors:</strong>
            <ul class="mb-0">
                {{#errors}}
                <li>{{.}}</li>
                {{/errors}}
            </ul>
        </div>
        {{/errors}}
        
        {{#warnings}}
        <div class="alert alert-warning mt-3">
            <strong>Warnings:</strong>
            <ul class="mb-0">
                {{#warnings}}
                <li>{{.}}</li>
                {{/warnings}}
            </ul>
        </div>
        {{/warnings}}
    </div>
</div>

<style>
.status-item {
    margin-bottom: 1rem;
}
</style>