{{!
    @template local_cloudflarestream/dashboard_cards

    Dashboard statistics cards template.

    Context variables required for this template:
    * cards - Array of card objects with title, value, icon, color
}}

<div class="row mb-4">
    {{#cards}}
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="card border-{{color}}">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-{{color}} mb-1">{{value}}</h5>
                        <p class="card-text text-muted small mb-0">{{title}}</p>
                    </div>
                    <div class="text-{{color}}">
                        <i class="fa {{icon}} fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/cards}}
</div>